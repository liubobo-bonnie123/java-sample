package com.forside.android.xml;

/**
 * This class represents the data structure for Navigation Point Data for an
 * ebook
 * 
 * @author ScrollMotion
 */
public class NavPointData {
	private String navPointClass;// represents the type of page of the e-book(eg
	// chapter,cover,title etc)
	private String navPointId;
	private String navPointPlayOrder;// represents the page number of e book
	private String navLabelText;// represents the name used for each link to a
	// page(eg name for link of page 6 is
	// "Chapter- One" )
	private String contentSrc;// represents the path or link to the page
	

	//Indicate if this is in the title of content
	private boolean inToC =false;

	/**
	 * Function to get value of Class of Navigation Point
	 * 
	 * @return value of class
	 */
	public String getNavPointClass() {
		return navPointClass;
	}

	/**
	 * Function to set the Class of Navigation Point
	 * 
	 * @param navPointClass
	 */
	public void setNavPointClass(String navPointClass) {
		this.navPointClass = navPointClass;
	}

	/**
	 * Function to get value of Id of Navigation Point
	 * 
	 * @return value of Id
	 */
	public String getNavPointId() {
		return navPointId;
	}

	/**
	 * Function to set the Id of Navigation Point
	 * 
	 * @param navPointId
	 */
	public void setNavPointId(String navPointId) {
		this.navPointId = navPointId;
	}

	/**
	 * Function to get value of Page number of Navigation Point
	 * 
	 * @return value of page number
	 */
	public String getNavPointPlayOrder() {
		return navPointPlayOrder;
	}

	/**
	 * Function to set the Play order of Navigation Point
	 * 
	 * @param navPointPlayOrder
	 */
	public void setNavPointPlayOrder(String navPointPlayOrder) {
		this.navPointPlayOrder = navPointPlayOrder;
	}

	/**
	 * Function to get value of Label of Navigation Point
	 * 
	 * @return value of label
	 */
	public String getNavLabelText() {
		return navLabelText;
	}

	/**
	 * Function to set the Label of Navigation Point
	 * 
	 * @param navLabelText
	 */
	public void setNavLabelText(String navLabelText) {
		this.navLabelText = navLabelText;
	}

	/**
	 * Function to get Source of Navigation Point
	 * 
	 * @return value of source
	 */
	public String getContentSrc() {
		return contentSrc;
	}

	/**
	 * Function to set the Source of Navigation Point
	 * 
	 * @param contentSrc
	 */
	public void setContentSrc(String contentSrc) {
		this.contentSrc = contentSrc;
	}

	public void setInToC(boolean inToC) {
		this.inToC = inToC;
	}

	public boolean isInToC() {
		return inToC;
	}
}
